!!! XML
!!! Strict
%html
  %head
    %meta{:'http-equiv' => "Content-Type", :content => "text/html", :charset => "utf-8"}
    %script{:type => 'text/javascript', :src => "/js/jquery-1.7.1.min.js"}
    %script{:type => 'text/javascript', :src => "/js/nicoaudio.js"}
  %body
    %form{:name => 'player'}
      - @ranking.each do |i, rank|
        %p= rank['title']
        %h5= rank['ctime']
        %input{:type => 'button', :value => "play", :onclick => "audio.play(\'#{rank['ctime']}\', \'#{rank['video_id']}\', \'#{i}\');"}
        %input{:type => 'button', :value => "pause", :onclick => "audio.pause();"}
      %input{:type => 'hidden', :name => 'playlist', :value => "#{@ranking.to_json}"}
